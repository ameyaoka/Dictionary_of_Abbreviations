{
  "manifest_version": 3,
  "name": "Word Definitions",
  "version": "1.0",
  "description": "Displays word definitions.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "web_accessible_resources": [{
    "resources": ["words.txt"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
